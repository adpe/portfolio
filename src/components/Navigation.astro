---
import { siteConfig } from '../config';

export interface Props {
  isHomePage?: boolean;
}

const { isHomePage = true } = Astro.props;
---

<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top px-3" id="sideNav">
  <a class="navbar-brand js-scroll-trigger" href="#about" aria-label="Go to about section">
    <h3 class="d-block d-lg-none m-0 fw-normal text-white">
      {siteConfig.firstName} {siteConfig.lastName}
    </h3>
    <span class="d-none d-lg-block">
      <img
        class="img-fluid img-profile rounded-circle mx-auto mb-2"
        src={siteConfig.profileImage}
        alt={`Profile picture of ${siteConfig.firstName} ${siteConfig.lastName}`}
      />
    </span>
  </a>
  <button
    class="navbar-toggler"
    type="button"
    data-bs-toggle="collapse"
    data-bs-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a
          class="nav-link js-scroll-trigger"
          href={isHomePage ? '#about' : '/#about'}
          aria-label="Go to about section"
        >
          About
        </a>
      </li>
      {siteConfig.showSkills && (
        <li class="nav-item">
          <a
            class="nav-link js-scroll-trigger"
            href={isHomePage ? '#skills' : '/#skills'}
            aria-label="Go to skills section"
          >
            Skills
          </a>
        </li>
      )}
      {siteConfig.showProjects && (
        <li class="nav-item">
          <a
            class="nav-link js-scroll-trigger"
            href={isHomePage ? '#creations' : '/#creations'}
            aria-label="Go to creations section"
          >
            Creations
          </a>
        </li>
      )}
      {siteConfig.showOpenSource && (
        <li class="nav-item">
          <a
            class="nav-link js-scroll-trigger"
            href={isHomePage ? '#open' : '/#open'}
            aria-label="Go to open source section"
          >
            Open Source
          </a>
        </li>
      )}
      {siteConfig.showPublications && (
        <li class="nav-item">
          <a
            class="nav-link js-scroll-trigger"
            href={isHomePage ? '#publications' : '/#publications'}
            aria-label="Go to publications section"
          >
            Publications
          </a>
        </li>
      )}
      {siteConfig.showExperience && (
        <li class="nav-item">
          <a
            class="nav-link js-scroll-trigger"
            href={isHomePage ? '#experience' : '/#experience'}
            aria-label="Go to experience section"
          >
            Experience
          </a>
        </li>
      )}
      {siteConfig.showEducation && (
        <li class="nav-item">
          <a
            class="nav-link js-scroll-trigger"
            href={isHomePage ? '#education' : '/#education'}
            aria-label="Go to education section"
          >
            Education
          </a>
        </li>
      )}
    </ul>
  </div>
</nav>
