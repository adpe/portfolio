---
export interface EducationItem {
  degree: string;
  school: string;
  major: string;
  minor?: string[];
  notes?: string;
  range: string;
}

export interface Props {
  items: EducationItem[];
}

const { items } = Astro.props;
---

<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
  <div class="my-auto">
    <h2 class="mb-5">Education</h2>
    {items.map((item) => (
      <div class="resume-item d-flex flex-column flex-md-row mb-5 w-100">
        <div class="resume-content flex-grow-1">
          <h3 class="mb-0">{item.degree}</h3>
          <div class="subheading mb-3">{item.school}</div>
          {item.major && <p>{item.major}</p>}
          {item.minor && item.minor.length > 0 && (
            <ul>
              {item.minor.map((m) => (
                <li>{m}</li>
              ))}
            </ul>
          )}
        </div>
        <div class="resume-date text-md-end ms-md-auto">
          <span class="text-primary">{item.range}</span>
        </div>
      </div>
    ))}
  </div>
</section>
