---
export interface ExperienceItem {
  role: string;
  company: string;
  major: string;
  minor?: string;
  summarystart?: string;
  summarylist?: string[];
  summaryend?: string;
  range: string;
  notes?: string;
}

export interface Props {
  items: ExperienceItem[];
}

const { items } = Astro.props;
---

<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
  <div class="my-auto" id="experience-content">
    <h2 class="mb-5">Experience</h2>
    {items.map((item) => (
      <div class="resume-item d-flex flex-column flex-md-row mb-5 w-100">
        <div class="resume-content flex-grow-1">
          <h3 class="mb-0">{item.role}</h3>
          <div class="subheading mb-3">{item.company}</div>
          <p>{item.major}</p>
          <p>{item.minor}</p>
          <p>{item.summarystart}</p>
          <ul>
            {item.summarylist?.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
          <p>{item.summaryend}</p>
          <p class="font-italic small">{item.notes}</p>
        </div>
        <div class="resume-date text-md-end ms-md-auto">
          <span class="text-primary">{item.range}</span>
        </div>
      </div>
    ))}
  </div>
</section>
